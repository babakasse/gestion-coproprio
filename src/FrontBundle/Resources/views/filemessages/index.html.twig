{%  extends "FrontBundle::base.html.twig" %}

{% block body %}
    <h1>Filemessages list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Etat</th>
                <th>Datedebut</th>
                <th>Datefin</th>
                <th>Iduser</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for fileMessage in fileMessages %}
            <tr>
                <td><a href="{{ path('filemessages_show', { 'id': fileMessage.id }) }}">{{ fileMessage.id }}</a></td>
                <td>{{ fileMessage.titre }}</td>
                <td>{% if fileMessage.etat %}Yes{% else %}No{% endif %}</td>
                <td>{% if fileMessage.dateDebut %}{{ fileMessage.dateDebut|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if fileMessage.dateFin %}{{ fileMessage.dateFin|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ fileMessage.idUser }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('filemessages_show', { 'id': fileMessage.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('filemessages_edit', { 'id': fileMessage.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('filemessages_new') }}">Create a new fileMessage</a>
        </li>
    </ul>
{% endblock %}
